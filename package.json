{
  "name": "richie-mat",
  "displayName": "richie-mat",
  "description": "Richie's MAT Extensions",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "richie-mat.refactorCallSub",
        "title": "Refactor CallSubs"
      },
      {
        "command": "richie-mat.renameCodeVariables",
        "title": "Rename Variables"
      },
      {
        "command": "richie-mat.addBreak",
        "title": "Add Break"
      }
    ],
    "keybindings": [
      {
        "command": "richie-mat.refactorCallSub",
        "key": "ctrl+alt+c",
        "when": "editorTextFocus"
      },
      {
        "command": "richie-mat.renameCodeVariables",
        "key": "ctrl+alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "richie-mat.addBreak",
        "key": "F8",
        "when": "editorTextFocus"
      }
    ],
    "submenus": [
      {
        "id": "richie-mat.toolsSubmenu",
        "label": "Richie Tools"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "richie-mat.toolsSubmenu",
          "when": "resourceExtname == .focus",
          "group": "9_my_custom_tools"
        }
      ],
      "richie-mat.toolsSubmenu": [
        {
          "command": "richie-mat.refactorCallSub",
          "group": "z_actions@1"
        },
        {
          "command": "richie-mat.renameCodeVariables",
          "group": "z_actions@1"
        },
        {
          "command": "richie-mat.addBreak",
          "group": "z_actions@1"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richpalmerjr/richie-mat.git"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}